<%= render 'layouts/navigation' %>
<div class='col-md-offset-2 col-md-8'>

<%= will_paginate @fights, renderer: BootstrapPagination::Rails %>
<h1 class='text-center'><%= r('all_fights.all_fights') %></h1>
<%= link_to r('all_fights.new_fight'), new_fight_path, :class => 'btn btn-success' %>
<table class="table table-hover">
  <thead>
    <tr>
      <th><%= r('all_fights.id') %></th>
      <th><%= r('all_fights.name') %></th>
      <th><%= r('all_fights.user') %></th>
      <th><%= r('all_fights.created') %></th>
      <th><%= r('all_fights.updated') %></th>
      <th><%= r('all_fights.watched') %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @fights.each do |fight| %>
      <tr>
        <td><%= fight.id %></td>
        <th><%= fight.name if fight.name %></th>
        <td><%= fight.user.nickname %></td>
        <td><%= fight.created_at.strftime("%Y-%m-%d %Hh") %></td>
        <td><%= fight.updated_at.strftime("%Y-%m-%d %Hh") %></td>
        <td><%= fight.watched %></td>
        <td><a href="/play/<%= fight.name %>"  class='btn btn-primary'>Watch</a></td>
        <% if current_user && current_user.nickname == 'mansim' %>
          <td><%= link_to 'Edit', edit_fight_path(fight.name), :class => 'btn btn-primary' %></td>
          <td><%= link_to 'Destroy', destroy_fight_path(id: fight.name), :class => 'btn btn-danger' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

</div>