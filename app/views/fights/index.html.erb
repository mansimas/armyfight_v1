
<%= render 'layouts/navigation' %>
<div class="container">
<div class='col-md-offset-2 col-md-8'>
<h1 class='text-center'>All Fights</h1>
<%= will_paginate @fights, renderer: BootstrapPagination::Rails %>
<%= link_to 'New Fight', new_fight_path, :class => 'btn btn-success' %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Created</th>
      <th>Updated</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fights.each do |fight| %>
      <tr>
        <td><%= fight.id %></td>
        <td><%= fight.name.truncate(30) %></td>
        <td><%= fight.created_at.strftime("%Y %m %d %H:%M:%S") %></td>
        <td><%= fight.updated_at.strftime("%Y %m %d %H:%M:%S") %></td>
        <td><a href="/play/<%= fight.id %>" class='btn btn-primary'>Watch</a></td>
        <td><%= link_to 'Edit', edit_fight_path(fight.name), :class => 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', fight.name, method: :delete, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
 
  </tbody>
</table>
<br>


</div>
</div>