<%= stylesheet_link_tag "application", :media => "all" %>
<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
<%= render 'layouts/navigation' %>
<div class='container' style='width: 50%'>

  <div class="row">
    <div class='text-center'>
      <h1><%= @fight.name %></h1>
    </div>
  </div>

  <br>
  <br>

  <div class="row">
    <div class='col-md-offset-2 col-md-8'>
      <a href="/<%= I18n.locale %>/play/<%= @fight.id %>" class='btn btn-primary' style="width: 100%">
				<%= r('homepage.fights.play') %>
			</a>
    </div>
  </div>

  <br>
  <br>

  <div class="row">
    <div class='text-center'>
      <h4><%= r('homepage.fights.description') %>:</h4>
    </div>
  </div>

  <br>
  <br>

  <div class="row">
    <div class='text-center'>
      <%= @fight.description.html_safe if @fight.description %>
    </div>
  </div>




  <br>
  <br>

</div>
