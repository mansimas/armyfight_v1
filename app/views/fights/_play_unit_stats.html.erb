<div data-ng-show = "edit_army_view(1)" >
    
    <div class="row" style='padding-top:10px;'>
        <div class="col-md-6 columns">
            <label class="form-control-label"> <%= r('homepage.fights.army_units') %>: </label>
            <strong><div data-ng-bind="unit_for_stats_change.stats.unit" style='display:inline; float:right;'></div></strong>
        </div>
        <div class="col-md-6 columns">
            <label class="form-control-label"> <%= r('homepage.fights.type') %>: </label>
            <strong><div data-ng-bind="unit_for_stats_change.stats.type" style='display:inline; float:right;'></div></strong>
        </div>
    </div><br>

    <div class="row" style='padding-top:10px;'>
        <div class="col-md-6 columns">
            <label class="form-control-label"> <%= r('homepage.fights.x_position') %>: </label>
            <input type="text" data-ng-model="unit_for_stats_change.x" data-ng-change="change_stats2()" class="form-control" style='display:inline; width: 40%; float:right;'>
        </div>
        <div class="col-md-6 columns">
            <label class="form-control-label"> <%= r('homepage.fights.y_position') %>: </label>
            <input type="text" data-ng-model="unit_for_stats_change.y" data-ng-change="change_stats2()" class="form-control" style='display:inline; width: 40%; float:right;'>
        </div>
    </div>

    <div class="row" style='padding-top:10px;'>
        <div class="col-md-6 columns">
            <label class="form-control-label" style='float:right; color:yellow;'><strong> <%= r('homepage.fights.range_from') %>: </strong></label>
       
        </div>
        <div class="col-md-6 columns" >
            <label class="form-control-label" style='float:right; color:yellow;'><strong> <%= r('homepage.fights.range_to') %>: </strong></label>
        </div>
    </div>

    <div class="row" style='padding-top:10px;'>
        <div class="col-md-6 columns">
            <label class="form-control-label"> <%= r('homepage.fights.health') %>: </label>
            <input type="text" data-ng-model="unit_for_stats_change.stats.hp_from" data-ng-change="change_stats2()" class="form-control" style='display:inline; width: 40%; float:right;'>
        </div>
        <div class="col-md-6 columns">
            <label class="form-control-label"> <%= r('homepage.fights.health') %>: </label>
            <input type="text" data-ng-model="unit_for_stats_change.stats.hp_to" data-ng-change="change_stats2()" class="form-control" style='display:inline; width: 40%; float:right;'>
        </div>
    </div>

    <div class="row" style='padding-top:10px;'>
        <div class="col-md-6 columns">
            <label class="form-control-label"> <%= r('homepage.fights.attack') %>: </label>
            <input type="text" data-ng-model="unit_for_stats_change.stats.dmg_from" data-ng-change="change_stats2()" class="form-control" style='display:inline; width: 40%; float:right;'>
        </div>
        <div class="col-md-6 columns">
            <label class="form-control-label"> <%= r('homepage.fights.attack') %>: </label>
            <input type="text" data-ng-model="unit_for_stats_change.stats.dmg_to" data-ng-change="change_stats2()" class="form-control" style='display:inline; width: 40%; float:right;'>
        </div>
    </div>

    <div class="row" style='padding-top:10px;'>
        <div class="col-md-6 columns">
            <label class="form-control-label"> <%= r('homepage.fights.def_horse') %>: </label>
            <input type="text" data-ng-model="unit_for_stats_change.stats.def_hors_from" data-ng-change="change_stats2()" class="form-control" style='display:inline; width: 40%; float:right;'>
        </div>
        <div class="col-md-6 columns">
            <label class="form-control-label"> <%= r('homepage.fights.def_horse') %>: </label>
            <input type="text" data-ng-model="unit_for_stats_change.stats.def_hors_to" data-ng-change="change_stats2()" class="form-control" style='display:inline; width: 40%; float:right;'>
        </div>
    </div>

    <div class="row" style='padding-top:10px;'>
        <div class="col-md-6 columns">
            <label class="form-control-label"> <%= r('homepage.fights.def_archer') %>: </label>
            <input type="text" data-ng-model="unit_for_stats_change.stats.def_arch_from" data-ng-change="change_stats2()" class="form-control" style='display:inline; width: 40%; float:right;'>
        </div>
        <div class="col-md-6 columns">
            <label class="form-control-label"> <%= r('homepage.fights.def_archer') %>: </label>
            <input type="text" data-ng-model="unit_for_stats_change.stats.def_arch_to" data-ng-change="change_stats2()" class="form-control" style='display:inline; width: 40%; float:right;'>
        </div>
    </div>

    <div class="row" style='padding-top:10px;'>
        <div class="col-md-6 columns">
            <label class="form-control-label"> <%= r('homepage.fights.def_inf') %>: </label>
            <input type="text" data-ng-model="unit_for_stats_change.stats.def_inf_from" data-ng-change="change_stats2()" class="form-control" style='display:inline; width: 40%; float:right;'>
        </div>
        <div class="col-md-6 columns">
            <label class="form-control-label"> <%= r('homepage.fights.def_inf') %>: </label>
            <input type="text" data-ng-model="unit_for_stats_change.stats.def_inf_to" data-ng-change="change_stats2()" class="form-control" style='display:inline; width: 40%; float:right;'>
        </div>
    </div>

    <div class="row" style='padding-top:10px;'>
        <div class="col-md-6 columns">
            <button class="btn btn-success" data-ng-click='center_army()'><%= r('homepage.fights.center_this_army') %></button>
        </div>
    </div><br>
</div>